<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AdminAssignTasksPage">
   <children>
      <Pane layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="800.0">
