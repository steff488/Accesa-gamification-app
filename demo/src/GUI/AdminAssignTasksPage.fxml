            <ListView fx:id="tasksListAdmin" layoutX="36.0" layoutY="96.0" prefHeight="155.0" prefWidth="597.0" />
            <Button fx:id="selectTasksButtonAdmin" layoutX="666.0" layoutY="96.0" mnemonicParsing="false" onAction="#selectTasksAdmin" style="-fx-background-color: green;" text="Select" textFill="WHITE" />
            <Label layoutX="36.0" layoutY="54.0" text="Tasks List">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
